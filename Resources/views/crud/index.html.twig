{% extends 'CtrlRadBundle::app.html.twig' %}

{% block content %}

    {{ page_title('crud.index.title'|trans({}, 'CtrlRadBundle')|format(options.label_entities|trans)) }}

    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav">
            {% if options.filter_enabled %}
            <li>
                <a data-toggle="collapse" href="#application-index-filters" aria-expanded="false" aria-controls="application-index-filters">
                    <i class="fa fa-fw fa-filter"></i> Filters
                </a>
            </li>
            {% endif %}
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li>
                <a href="{{ path(options.route_create) }}" role="button"><i class="fa fa-fw fa-plus-circle"></i> Add {{ options.label_entity|trans }}</a>
            </li>
        </ul>
    </nav>

    {% if options.filter_enabled %}
    <div class="collapse {{ (filterActive) ? 'in': '' }}" id="application-index-filters">

        <div class="well">

            <form method="get" novalidate="novalidate">

                {% for element in form %}
                    {{ form_row(element) }}
                {% endfor %}

                <button type="submit" class="btn btn-primary">Filter</button>
                <a href="{{ path(options.route_index) }}" class="btn btn-default">Clear</a>

            </form>

        </div>

    </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        {% for label in options.columns %}
                            <th>{{ label|trans }}</th>
                        {% endfor %}
                        <th>{{ "crud.index.column.actions"|trans({}, 'CtrlRadBundle') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in paginator %}
                    <tr>
                        {% for prop, label in options.columns %}
                        <td>
                            {% if attribute(entity, prop)|is_type('bool') %}
                                {{ attribute(entity, prop)|label }}
                            {% else %}
                                {{ attribute(entity, prop) }}
                            {% endif %}
                        </td>
                        {% endfor %}
                        <td>
                            {% spaceless %}
                            {% for action in options.actions %}
                                <a href="{{ action.route|call(entity) }}" class="btn btn-primary btn-sm {{ action.class }}">
                                    {% if action.class %}<i class="fa fa-{{ action.icon }} fa-fw"></i>{% endif %}
                                    {{ action.label|trans }}
                                </a>
                            {% endfor %}
                            {% endspaceless %}
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">No {{ options.label_entities|trans }} found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    {% if paginator.pageCount > 1 %}
                    <tfoot>
                        <tr>
                            <td colspan="8" class="text-center">
                                {{ pagination(paginator, app.request) }}
                            </td>
                        </tr>
                    </tfoot>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
