{% extends ctrl_rad_templates.app %}

{% block breadcrumbs %}
    <li><a href="{{ path(config.routeConfig.route_index) }}">{{ config.options.entity_label_plural|trans }}</a></li>
{% endblock %}

{% block content %}

    {{ page_title('crud.index.title'|trans({}, 'CtrlRadBundle')|format(config.options.entity_label_plural|trans)) }}

    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav navbar-right">
            {% if config.routes.route_create %}
            <li>
                <a href="{{ path(config.routes.route_create) }}" role="button"><i class="fa fa-fw fa-plus-circle"></i> Add {{ config.options.entity_label|trans }}</a>
            </li>
            {% endif %}
        </ul>
        <ul class="nav navbar-nav navbar-left">
            {% if config.options.filter_enabled %}
            <li>
                <a data-toggle="collapse" href="#application-index-filters" aria-expanded="false" aria-controls="application-index-filters">
                    <i class="fa fa-fw fa-filter"></i> Filters
                </a>
            </li>
            {% endif %}
        </ul>
    </nav>

    {% if config.options.filter_enabled %}
    <div class="collapse {{ (filterActive) ? 'in': '' }}" id="application-index-filters">

        <div class="well">

            <form method="get" novalidate="novalidate">

                {% include config.templates.filter_elements with { config: config, form: form } only %}

                <button type="submit" class="btn btn-primary">Filter</button>
                <a href="{{ path(config.routes.route_index) }}" class="btn btn-default">Clear</a>

            </form>

        </div>

    </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                {% include config.templates.index_table with { config: config, paginator: paginator } only %}
            </div>
        </div>
    </div>
{% endblock %}
