{% spaceless %}
    {% if config is defined %}
        {% if config|is_type('string') %}
            {% set value = attribute(parent, config) %}
        {% elseif config|is_type('array') %}
            {# TODO: parse display config #}
        {% endif %}
    {% endif %}

    {% if value is defined %}
        {% if value|is_type('bool') %}
            {{ value|label }}
        {% elseif value|is_type('datetime') %}
            {{ value|date }}
        {% else %}
            {{ value }}
        {% endif %}
    {% endif %}

{% endspaceless %}
